<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_night"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="@dimen/icon_24"
        android:text="@string/app_name"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/search_button"
        style="@style/MainButtonStyle"
        android:text="@string/search_line"
        app:icon="@drawable/ic_search_24" />

    <Button
        android:id="@+id/media_library_button"
        style="@style/MainButtonStyle"
        android:text="@string/media_library_line"
        app:icon="@drawable/ic_library_25_24" />

    <Button
        android:id="@+id/settings_button"
        style="@style/MainButtonStyle"
        android:text="@string/settings_line"
        app:icon="@drawable/ic_settings_24" />

</LinearLayout>
