<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_night"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/art_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padding_8"
        android:layout_marginStart="13dp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:id="@+id/track_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="@color/black_night"
            android:textFontWeight="400"
            android:textSize="@dimen/size_16"
            tools:text="Название трека" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_8"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/grey_night"
                android:textFontWeight="400"
                android:textSize="@dimen/size_11"
                tools:text="Имя артиста" />

            <ImageView
                android:id="@+id/ic_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/grey_night"
                android:textFontWeight="400"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/size_11"
                tools:text="5:21" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/track_arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_18"
        android:layout_marginEnd="19dp"
        android:src="@drawable/ic_arrow_forward_24" />

</LinearLayout>
