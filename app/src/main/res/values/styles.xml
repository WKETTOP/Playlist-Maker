<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/size_22</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_16</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/size_22</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/padding_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingHorizontal">@dimen/padding_16</item>
        <item name="android:paddingVertical">@dimen/padding_20</item>
        <item name="android:textColor">@color/black_night</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/icon_24</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_night</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="RoundedButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/icon_24</item>
        <item name="android:backgroundTint">@color/black_night</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_night</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedButtonTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_night</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AddNewPlaylistEditStyle">
        <item name="android:background">@drawable/add_new_playlist_edit_border</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_night</item>
        <item name="android:textColorHint">@color/black_night</item>
    </style>
</resources>